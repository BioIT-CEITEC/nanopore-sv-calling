{
    "workflow_description": {
      "name":"nanopore_sv_calling",
      "version": 1.0,
      "label":"Structural variant calling",
      "type":"structural_variant_calling",
      "inputs":[
        "sequencing_data/{sample}*.bam"
      ],
      "outputs":[
        "SV_calling/{sample}*.vcf"
      ],
      "report_index": "qc_reports/all_samples/nanopore_SV_qc.html",
      "reports":[
        "qc_reports/all_samples/nanopore_SV_qc.html"
      ],
      "run_parameters": {
        "cpu": 30,
        "memory": 128
      }
    },
    "general_params": [
      "entity_name",
      "sample_name"
    ],
    "gui_params" : {
      "primary": { 
        "reference": {
          "label": "Genomic Reference",
          "type": "enum",
          "default": ##INCLUDE:reference_info/default_reference.json##,
          "conditions": {
            "relevance": {
              "operand": "equal",
              "negation": false,
              "values": {
                "lib_ROI": "wgs"
              }
            }
          },
          "list": ##INCLUDE:reference_info/reference2.json##
        }
      }
    }
  }
  